#!/usr/bin/env ruby

puts "--- Restoring Cached Dependencies"
if ENV['DIVSHOT_CACHE_DIRS'] && ENV['DIVSHOT_CACHE_DIRS'].length > 0
  ENV['DIVSHOT_CACHE_DIRS'].split(";").each do |cache_dir|
    puts "Mounting cached dependencies to #{cache_dir}"
    system("ln -s /home/build/cache/#{cache_dir} /home/build/src/#{cache_dir}")
  end
else
  puts "No cacheable dependencies, proceeding to build."
end